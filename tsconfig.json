{
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist/@types",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["mocha", "node", "assemblyscript/std/portable"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
